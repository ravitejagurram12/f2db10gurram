extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let juiceid = toShow._id 
    - let juice_flavour = toShow.juice_flavour
    - let juice_cost = toShow.juice_cost
    - let juice_quantity = toShow.juice_quantity
    - let actionid = "/resource/juice/" + juiceid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='juiceAttr mr-3') juice ID is: 
        div #{juiceid} 
      div.row 
        div(class='juiceAttr mr-3') juice flavour is: 
        div #{juice_flavour} 
      div.row 
        div(class='juiceAttr mr-3') juice cost is: 
        div #{juice_cost} 
      div.row 
        div(class='juiceAttr mr-3') juice quantity is: 
        div #{juice_quantity} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the juice collection 
      window.location.href='/juices' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/juices' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 