extends layout

block content
  h1= title
  - let result=results
  div(class="container-fluid")
  div(class="row")
   each value,index in result
    div(class="col-sm-2" onclick=`buy(${index})`)  #{value.juice_flavour} drink, cost #{value.juice_cost}, quantity #{value.juice_quantity}
   script.
    function buy(index)
    {
      alert(`Your purchased Item ${index+1}`)
    }
  

